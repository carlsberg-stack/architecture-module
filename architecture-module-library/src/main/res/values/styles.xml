<resources>

    <style name="Appearance.App.Dialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="textColorAlertDialogListItem">@android:color/darker_gray</item>
        <item name="android:windowTitleStyle">@style/Appearance.App.Dialog.TitleStyle</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="windowFixedWidthMajor">75%</item>
        <item name="windowFixedWidthMinor">75%</item>
    </style>

    <style name="Appearance.App.Dialog.TitleStyle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="Appearance_App_TextStyleLight_Small">
        <item name="android:textColor">@color/lightTextColor</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="Appearance_App_TextStyleLight_Medium">
        <item name="android:textColor">@color/lightTextColor</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="Appearance_App_TextStyleLight_Largr">
        <item name="android:textColor">@color/lightTextColor</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

</resources>
